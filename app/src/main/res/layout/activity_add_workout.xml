<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnViewSessions"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="@string/view_all_workouts"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/grey"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/blue"
            android:text="@string/logout"
            android:textColor="@color/white" />
    </LinearLayout>


    <com.example.android.taweretgym.FontView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_workout"
        android:textSize="36sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/typeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_type"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_type"
        android:drawableTint="@color/blue"
        android:text="@string/exercise_type"
        android:textColor="@android:color/darker_gray"
        android:textSize="17.7sp" />

    <Spinner
        android:id="@+id/txtTypeWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />


    <EditText
        android:id="@+id/txtSetsWorkout"
        android:layout_width="match_parent"
        android:hint="@string/number_of_sets"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/ic_scale"
        android:drawableLeft="@drawable/ic_scale"
        android:drawableTint="@color/blue"
        android:drawablePadding="5dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/txtDateWorkout"
        android:layout_width="match_parent"
        android:hint="@string/date"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/ic_calendar"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawableTint="@color/blue"
        android:drawablePadding="5dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:inputType="date" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_loc"
        android:textSize="17.7sp"
        android:layout_margin="8dp"
        android:textColor="@android:color/darker_gray"
        android:drawableStart="@drawable/ic_loc"
        android:text="@string/location"
        android:drawablePadding="5dp"
        android:drawableTint="@color/blue"/>

    <Spinner
        android:id="@+id/txtLocationWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />


    <Button
        android:id="@+id/btnAddWorkout"
        android:layout_width="wrap_content"
        android:contentDescription="@string/add_workout"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:background="@color/blue"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_add_list"
        android:drawableStart="@drawable/ic_add_list"
        android:text="@string/add"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:tint="@color/white"/>

</LinearLayout>